{% extends 'base.html.twig' %}

{% block title %}Commander{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Passer une commande</h1>
    
    {% if app.user %}
        {{ form_start(form) }}
            <div class="mb-3">
                {{ form_label(form.adresseLivraison) }}
                {{ form_widget(form.adresseLivraison, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.adresseLivraison) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.adresseFacturation) }}
                {{ form_widget(form.adresseFacturation, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.adresseFacturation) }}
            </div>
            <button type="submit" class="btn btn-success">Commander</button>
        {{ form_end(form) }}
    {% else %}
        <div class="alert alert-warning" role="alert">
            Vous devez être connecté pour passer une commande. <a href="{{ path('app_login') }}" class="alert-link">Se connecter</a>
        </div>
    {% endif %}
</div>
{% endblock %}
