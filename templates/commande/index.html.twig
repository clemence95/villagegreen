{% extends 'base.html.twig' %}

{% block title %}Commander{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Passer une commande</h1>
    
    {% if app.user %}
        {% if produits is not empty %}
            <h2>Récapitulatif de votre panier</h2>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Produit</th>
                            <th>Quantité</th>
                            <th>Prix unitaire HT</th>
                            <th>Total HT</th>
                            <th>Total TTC</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in produits %}
                            <tr>
                                <td>{{ item.produit.libelleCourt }}</td>
                                <td>{{ item.quantite }}</td>
                                <td>{{ item.produit.prixVente }} €</td>
                                <td>{{ item.totalHT }} €</td>
                                <td>{{ item.totalTTC }} €</td>
                            </tr>
                        {% endfor %}
                        <tr>
                            <td colspan="3"><strong>Total HT</strong></td>
                            <td colspan="2"><strong>{{ totalHT }} €</strong></td>
                        </tr>
                        <tr>
                            <td colspan="3"><strong>Total TTC</strong></td>
                            <td colspan="2"><strong>{{ totalTTC }} €</strong></td>
                        </tr>
                    </tbody>
                </table>
            </div>

            {{ form_start(form) }}
                <h3>Adresse de Livraison</h3>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        {{ form_row(form.id_adresse_livraison.rue) }}
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_row(form.id_adresse_livraison.numero_rue) }}
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_row(form.id_adresse_livraison.ville) }}
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_row(form.id_adresse_livraison.code_postal) }}
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_row(form.id_adresse_livraison.pays) }}
                    </div>
                </div>

                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="sameAddress">
                    <label class="form-check-label" for="sameAddress">L'adresse de facturation est la même que l'adresse de livraison</label>
                </div>

                <h3>Adresse de Facturation</h3>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        {{ form_row(form.id_adresse_facturation.rue) }}
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_row(form.id_adresse_facturation.numero_rue) }}
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_row(form.id_adresse_facturation.ville) }}
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_row(form.id_adresse_facturation.code_postal) }}
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_row(form.id_adresse_facturation.pays) }}
                    </div>
                </div>

                <div class="mb-3">
                    {{ form_label(form.mode_paiement) }}
                    {{ form_widget(form.mode_paiement, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.mode_paiement) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.information_reglement) }}
                    {{ form_widget(form.information_reglement, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.information_reglement) }}
                </div>
                <button type="submit" class="btn btn-success">Commander</button>
            {{ form_end(form) }}
        {% else %}
            <div class="alert alert-warning" role="alert">
                Votre panier est vide. Ajoutez des produits pour passer une commande.
            </div>
        {% endif %}
    {% else %}
        <div class="alert alert-warning" role="alert">
            Vous devez être connecté pour passer une commande. <a href="{{ path('app_login') }}" class="alert-link">Se connecter</a>
        </div>
    {% endif %}
</div>

<script>
document.getElementById('sameAddress').addEventListener('change', function() {
    if (this.checked) {
        document.getElementById('{{ form.id_adresse_facturation.rue.vars.id }}').value = document.getElementById('{{ form.id_adresse_livraison.rue.vars.id }}').value;
        document.getElementById('{{ form.id_adresse_facturation.numero_rue.vars.id }}').value = document.getElementById('{{ form.id_adresse_livraison.numero_rue.vars.id }}').value;
        document.getElementById('{{ form.id_adresse_facturation.ville.vars.id }}').value = document.getElementById('{{ form.id_adresse_livraison.ville.vars.id }}').value;
        document.getElementById('{{ form.id_adresse_facturation.code_postal.vars.id }}').value = document.getElementById('{{ form.id_adresse_livraison.code_postal.vars.id }}').value;
        document.getElementById('{{ form.id_adresse_facturation.pays.vars.id }}').value = document.getElementById('{{ form.id_adresse_livraison.pays.vars.id }}').value;
    } else {
        document.getElementById('{{ form.id_adresse_facturation.rue.vars.id }}').value = '';
        document.getElementById('{{ form.id_adresse_facturation.numero_rue.vars.id }}').value = '';
        document.getElementById('{{ form.id_adresse_facturation.ville.vars.id }}').value = '';
        document.getElementById('{{ form.id_adresse_facturation.code_postal.vars.id }}').value = '';
        document.getElementById('{{ form.id_adresse_facturation.pays.vars.id }}').value = '';
    }
});
</script>
{% endblock %}










