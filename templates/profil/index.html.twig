{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
<div class="container-profil mt-5">
    <div class="card">
        <div class="card-body">
            <h1 class="card-title">Profil de {{ user.prenom }} {{ user.nom }}</h1>
            <dl class="row">
                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">{{ user.email }}</dd>
                {# Ajoutez d'autres champs de profil ici si nécessaire #}
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <h2>Vos Commandes</h2>
        {% if commandes is not empty %}
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID Commande</th>
                            <th>Date</th>
                            <th>Montant Total</th>
                            <th>Statut</th>
                            <th>Produits Commandés</th> {# Nouvelle colonne pour afficher les produits #}
                        </tr>
                    </thead>
                    <tbody>
                        {% for commande in commandes %}
                            <tr>
                                <td>{{ commande.id }}</td>
                                <td>{{ commande.dateCommande|date('d/m/Y H:i') }}</td>
                                <td>{{ commande.montantTotal }} €</td>
                                <td>{{ commande.statut }}</td>
                                <td>
                                    <ul>
                                        {% for produitData in commande.produits %}
                                            {# Récupérer le produit à partir de son ID #}
                                            {% set produit = produitData.produit_id %}
                                            <li>
                                                {{ produit.libelleCourt }} - {{ produitData.quantite }} pièce(s)
                                                <!-- Ajoutez d'autres détails du produit si nécessaire -->
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="alert alert-info" role="alert">
                Vous n'avez pas encore passé de commande.
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}





