{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1>Produit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>LibelleCourt</th>
                <th>LibelleLong</th>
                <th>ReferenceFournisseur</th>
                <th>PrixAchat</th>
                <th>PrixVente</th>
                <th>Stock</th>
                <th>Actif</th>
                <th>Photo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.libelleCourt }}</td>
                <td>{{ produit.libelleLong }}</td>
                <td>{{ produit.referenceFournisseur }}</td>
                <td>{{ produit.prixAchat }}</td>
                <td>{{ produit.prixVente }}</td>
                <td>{{ produit.stock }}</td>
                <td>{{ produit.actif ? 'Yes' : 'No' }}</td>
                <td>{{ produit.photo }}</td>
                <td>
                    <a href="{{ path('app_produit_show', {'id': produit.id}) }}">show</a>
                    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_produit_new') }}">Create new</a>
{% endblock %}
