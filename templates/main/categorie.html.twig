{% extends 'base.html.twig' %}

{% block body %}
<div class="container my-4 mt-5 pt-5">
    <div class="row justify-content-center">
        <div class="col-md-10 text-center mt-5">
            <h1 class="mb-4">{{ categorie.nom }}</h1>

            <div class="row d-flex justify-content-center g-3">
                {% for sousCategorie in sousCategories %}
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-2">
                        <div class="card h-100 my-3 mx-auto border rounded">
                            {% if sousCategorie.getImage() %}
                                <img src="{{ sousCategorie.getImage() }}" class="card-img-top" alt="{{ sousCategorie.getNom() }}">
                            {% endif %}
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">{{ sousCategorie.getNom() }}</h5>
                                <a href="{{ path('sous_categorie', {'nom': categorie.nom, 'sousCategorieId': sousCategorie.id}) }}" class="btn btn-primary mt-auto">Voir les produits</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}






