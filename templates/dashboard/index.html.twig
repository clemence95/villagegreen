{% extends 'base.html.twig' %}

{% block title %}Tableau de Bord{% endblock %}

{% block body %}
    <h1 class="mt-5">Tableau de Bord</h1>

    <h2 class="mt-4">Liste des Produits</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle Court</th>
                <th>Libelle Long</th>
                <th>Prix Achat</th>
                <th>Prix Vente</th>
                <th>Catégorie</th>
                <th>Sous-Catégorie</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.libelleCourt }}</td>
                <td>{{ produit.libelleLong }}</td>
                <td>{{ produit.prixAchat }}</td>
                <td>{{ produit.prixVente }}</td>
                <td>{{ produit.sousCategorie.categorieParent.nom }}</td>
                <td>{{ produit.sousCategorie.nom }}</td>
                <td>
                    <a href="{{ path('app_produit_show', {'id': produit.id}) }}" class="btn btn-info">Voir</a>
                    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-warning">Éditer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_produit_new') }}" class="btn btn-success">Créer un nouveau Produit</a>

    <h2 class="mt-4">Liste des Catégories</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.nom }}</td>
                <td>
                    <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}" class="btn btn-info">Voir</a>
                    <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-warning">Éditer</a>
                    {{ include('categorie/_delete_form.html.twig') }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_categorie_new') }}" class="btn btn-success">Créer une nouvelle Catégorie</a>
{% endblock %}








