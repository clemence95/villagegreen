{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>{{ categorie.categorieParent ? 'Sous-categorie' : 'Categorie' }}</h1>

        <table class="table table-striped">
            <tbody>
                <tr>
                    <th scope="row">Id</th>
                    <td>{{ categorie.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Nom</th>
                    <td>{{ categorie.nom }}</td>
                </tr>
                <tr>
                    <th scope="row">Image</th>
                    <td>{{ categorie.image }}</td>
                </tr>
                {% if categorie.categorieParent %}
                <tr>
                    <th scope="row">Categorie Parent</th>
                    <td>{{ categorie.categorieParent.nom }}</td>
                </tr>
                {% endif %}
            </tbody>
        </table>

        <div class="d-flex justify-content-between mt-3">
            <a href="{{ path('app_categorie_index') }}" class="btn btn-primary">Back to list</a>
            <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-secondary">Edit</a>
        </div>

        <div class="mt-3">
            {{ include('categorie/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
