{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Categorie</h1>

        <table class="table table-striped">
            <tbody>
                <tr>
                    <th scope="row">Id</th>
                    <td>{{ categorie.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Nom</th>
                    <td>{{ categorie.nom }}</td>
                </tr>
                <tr>
                    <th scope="row">Image</th>
                    <td>{{ categorie.image }}</td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-between">
            <a href="{{ path('app_categorie_index') }}" class="btn btn-primary">Back to list</a>
            <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-secondary">Edit</a>
        </div>

        {{ include('categorie/_delete_form.html.twig') }}
    </div>
{% endblock %}
